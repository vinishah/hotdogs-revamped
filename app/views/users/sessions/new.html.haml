.log-in-form
  %h2 welcome back
  .form-group
    = minimal_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true
        = f.input :password, required: false
        .remember-me
          = f.input :remember_me, label: "'Don't you dare forget me'", as: :boolean if devise_mapping.rememberable?
      .form-actions
        .btn-lg= f.button :submit, "Log in"
    = render "users/shared/links"